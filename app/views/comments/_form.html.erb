<%= form_for [ post, comment ] do |f| %>

  <%= error_messages_for comment %>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author, :placeholder => "Digite Seu nome" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :placeholder => "Digite seu email" %>
  </div>

  <div class="field">
    <%= f.label :url %><br />
    <p class="notRequired">*não necessário</p>
    <%= f.text_field :url  %>
  </div>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>


  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
